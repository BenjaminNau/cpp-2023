/*
Write a program that prompts the user to input a number. The program should then output the number and a message saying whether the number is positive, negative, or zero.
*/

#include <iostream>

using namespace std;

int main() {
    int number;
    cout << "enter a number, ";
    cin >> number;

    cout << "the number " << number << " is ";

    if (number == 0) {
        cout << "zero";
    }
    else if (number > 0) {
        cout << "positive";
    }
    else {
        cout << "negative";
    }

    return 0;
}
